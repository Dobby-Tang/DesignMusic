<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/home_artist_item_img"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            fresco:placeholderImage="@drawable/recipe" />

        <TextView
            android:id="@+id/home_artist_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_artist_item_img"
            android:padding="8dp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/home_artist_item_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_artist_item_title"
            android:padding="8dp"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/home_artist_item_more"
            android:layout_width="4dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/music_more"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
