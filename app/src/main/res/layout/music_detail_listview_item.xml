<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="72dp">

    <TextView
        android:id="@+id/music_detail_item_music_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:fontFamily="sans-serif-medium"
        android:layout_alignTop="@id/music_item_album_img"
        android:layout_marginTop="16dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="64dp"/>

    <TextView
        android:id="@+id/music_detail_item_artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:fontFamily="sans-serif-regular"
        android:layout_below="@id/music_detail_item_music_name"
        android:layout_marginTop="8dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="64dp"/>

    <ImageView
        android:id="@+id/music_detail_item_more"
        android:layout_width="4dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/music_more"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/lineColor"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        />


</RelativeLayout>
